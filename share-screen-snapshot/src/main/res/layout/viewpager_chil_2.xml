<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_child2"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_child1_header"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="8.2">

        <TextView
            android:background="@color/white"
            android:layout_width="10px"
            android:layout_marginRight="10px"
            android:layout_height="match_parent"/>

        <TextView
            android:id="@+id/tv_child1_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="今日天气(天气折线图上滑左移,下滑右移)"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:layout_weight="6"
        android:textSize="40dp"
        android:textColor="@color/white"
        android:text="天气转热, 昼夜温差大, 注意衣物添减"/>

    <com.dengjia.lib_share_weather.MiuiWeatherView
        android:id="@+id/weather"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3"
        app:background_color="@color/bcakgroud_touming"
        app:line_interval="60px"
        app:min_point_height="50px" />

</LinearLayout>